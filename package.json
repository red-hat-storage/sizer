    "clean": "rm -rf ./build",
    "build": "npm run clean && MODE=production DEPLOYMENT_MODE=lab PUBLIC_PATH=/labs/ocsst/ ts-node -O '{\"module\": \"commonjs\"}' ./node_modules/webpack/bin/webpack --mode=production",
    "build-upstream": "npm run clean && MODE=production ts-node -O '{\"module\": \"commonjs\"}' ./node_modules/webpack/bin/webpack --config ./webpack.config.ts",
