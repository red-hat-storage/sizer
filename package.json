    "dev": "npm run clean && ts-node -O '{\"module\": \"commonjs\"}' ./node_modules/webpack/bin/webpack serve --port 9005",
    "lint": "./node_modules/.bin/eslint --ext '.js,.ts, .tsx' src/",
    "format": "./node_modules/.bin/prettier --write 'src/**/*.{ts,tsx}'"
  },
